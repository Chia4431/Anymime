<!-- This is being used to style adapters for mConversationView  -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="4dp"
  android:background="#60000000" 
>
  <ImageView
    android:id="@+id/icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="10dp"
    android:layout_centerVertical="true"
    android:contentDescription="Radio"
  />

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp" 
    android:layout_weight="1"
    android:layout_height="wrap_content"
  >
    <!-- devicename -->
    <TextView
      android:id="@+id/visibleText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:textColor="#eee"
      android:paddingBottom="3dp"
    />

    <!-- addr -->
    <TextView
      android:id="@+id/visibleText2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="#eee"
      android:paddingTop="-10dp"
      android:paddingBottom="3dp"
    />
  </LinearLayout>

  <ImageView
    android:id="@+id/iconDiscovered"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:contentDescription="Discovered"
  />

  <TextView
    android:id="@+id/invisibleText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
  />
</LinearLayout>

