<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/bg"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/background"
>
  <!-- header -->
  <LinearLayout
    android:id="@+id/header"
	  android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	  android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
  >
    <ImageView
      android:id="@+id/applogo"
      android:src="@drawable/anymime"
      android:layout_width="wrap_content"
      android:layout_height="62dp"
      android:paddingTop="10dp"
      android:layout_centerInParent="true"
      android:gravity="center"
      android:layout_marginTop="6dp"
    />
  </LinearLayout>

  <!-- footer -->
  <LinearLayout
    android:id="@+id/footer"
    android:layout_width="800dp"
    android:layout_height="82dp"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:padding="2dp"
  >
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:fillViewport="true"
    >
      <!-- progress bar -->
      <ProgressBar 
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:progress="0"
        android:textColor="#3dafee"
        android:layout_centerHorizontal="true"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:progressDrawable = "@xml/progressbar"
      />

      <!-- button bar -->
      <HorizontalScrollView
        android:id="@+id/quickBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:cacheColorHint="#00000000"
        android:paddingBottom="4dp"
        android:gravity="center"
      >
        <LinearLayout
          android:id="@+id/linearLayout1"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_above="@+id/progressBar"
          android:orientation="horizontal"
        >
          <Button
            android:id="@+id/buttonRadioSelect"
            android:text="Radio"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_preferences"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          />
          <!--Button
            android:id="@+id/buttonManualConnectOpp"
            android:text="Transfer OPP"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_upload"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          /-->
          <Button
            android:id="@+id/buttonSendFiles"
            android:text="To send"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_agenda"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          />
          <Button
            android:id="@+id/buttonManualConnect"
            android:text="Connect"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_upload"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          />
          <Button
            android:id="@+id/buttonReceivedFiles"
            android:text="Received"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_save"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          />
          <!--Button
            android:id="@+id/buttonBluetoothSettings"
            android:text="Bluetooth"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_preferences"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          /-->
          <!--Button
            android:id="@+id/buttonAbout"
            android:text="About"
            android:textSize="12sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            style="@style/dialogTextAppearence.HighlightButton"
            android:drawableTop="@android:drawable/ic_menu_info_details"
            android:drawablePadding="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
          /-->
        </LinearLayout>
      </HorizontalScrollView>
    </RelativeLayout>
  </LinearLayout>


  <!-- main -->
  <LinearLayout
	  android:layout_width="460dp"
	  android:layout_height="match_parent"
    android:layout_below="@+id/header"
    android:layout_above="@+id/footer"
	  android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
  >
    <!-- layout_marginBottom moves this view up above the vertical center -->

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
    >
      <LinearLayout 
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layer_list_dark"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
      >

        <!-- radio icon bar -->
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_marginTop="6dp"
          android:layout_marginBottom="10dp"
        >
          <ImageView
            android:id="@+id/radioLogo1"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
          />
          <ImageView
            android:id="@+id/radioLogo2"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
          />
          <ImageView
            android:id="@+id/radioLogo3"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
          />
          <ImageView
            android:id="@+id/radioLogo4"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
          />
        </LinearLayout>


        <!-- todo: maybe use larger font, if the screen is bigger -->
        <TextView
          android:id="@+id/userHint"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="#eee"
          android:gravity="center"
          android:layout_marginBottom="8dp"
        />
        <TextView
          android:id="@+id/userHint2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="#eee"
          android:gravity="center"
          android:layout_marginBottom="8dp"
        />
        <TextView
          android:id="@+id/userHint3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="#eee"
          android:gravity="center"
          android:layout_marginBottom="8dp"
        />

        <!-- simple progress bar -->
        <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:gravity="center"
          android:layout_gravity="center"
        >
          <ProgressBar 
            android:id="@+id/simpleProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
          />
        </LinearLayout>

      </LinearLayout>
    </RelativeLayout>
  </LinearLayout>


</RelativeLayout>


