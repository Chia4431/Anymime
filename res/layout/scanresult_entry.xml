<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:orientation="vertical"
>
  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="-10px"
  >
    <RelativeLayout
      android:id="@+id/errorMarker"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="11px"
      android:gravity="center"
    >
      <View
        android:id="@+id/errorMarker01"
        android:layout_alignParentLeft="true"
        android:layout_height="24dp"
        android:layout_width="20dp"
        android:layout_marginLeft="7px"
      />
      <View
        android:id="@+id/errorMarker02"
        android:layout_toRightOf="@id/errorMarker01"
        android:layout_height="24dp"
        android:layout_width="20dp"
        android:layout_marginRight="21px"
      />
      <View
        android:id="@+id/errorMarker03"
        android:layout_toRightOf="@id/errorMarker02"
        android:layout_height="24dp"
        android:layout_width="20dp"
      />
      <View
        android:id="@+id/errorMarker04"
        android:layout_toRightOf="@id/errorMarker03"
        android:layout_height="24dp"
        android:layout_width="20dp"
        android:layout_marginRight="21px"
      />
      <View
        android:id="@+id/errorMarker05"
        android:layout_toRightOf="@id/errorMarker04"
        android:layout_height="24dp"
        android:layout_width="20dp"
      />
      <View
        android:id="@+id/errorMarker06"
        android:layout_toRightOf="@id/errorMarker05"
        android:layout_height="24dp"
        android:layout_width="20dp"
        android:layout_marginRight="21px"
      />
      <View
        android:id="@+id/errorMarker07"
        android:layout_toRightOf="@id/errorMarker06"
        android:layout_height="24dp"
        android:layout_width="20dp"
      />
      <View
        android:id="@+id/errorMarker08"
        android:layout_toRightOf="@id/errorMarker07"
        android:layout_height="24dp"
        android:layout_width="20dp"
      />
    </RelativeLayout>


    <RelativeLayout
      android:id="@+id/scannedResults"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginTop="8dp"
      android:gravity="center"
    >
      <View
        android:id="@+id/scannedCharacter01"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginLeft="6px"
        android:layout_marginRight="1px"
      />
      <View
        android:id="@+id/scannedCharacter02"
        android:layout_toRightOf="@id/scannedCharacter01"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="22px"
      />
      <View
        android:id="@+id/scannedCharacter03"
        android:layout_toRightOf="@id/scannedCharacter02"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="1px"
      />
      <View
        android:id="@+id/scannedCharacter04"
        android:layout_toRightOf="@id/scannedCharacter03"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="22px"
      />
      <View
        android:id="@+id/scannedCharacter05"
        android:layout_toRightOf="@id/scannedCharacter04"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="1px"
      />
      <View
        android:id="@+id/scannedCharacter06"
        android:layout_toRightOf="@id/scannedCharacter05"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="22px"
      />
      <View
        android:id="@+id/scannedCharacter07"
        android:layout_toRightOf="@id/scannedCharacter06"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
        android:layout_marginRight="1px"
      />
      <View
        android:id="@+id/scannedCharacter08"
        android:layout_toRightOf="@id/scannedCharacter07"
        android:layout_height="22.5dp"
        android:layout_width="20dp"
      />
    </RelativeLayout>


    <RelativeLayout
      android:id="@+id/wantedResults"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:gravity="center"
    >
      <TextView
        android:id="@+id/wantedCharacter01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
        android:layout_marginLeft="5px"
      />
      <TextView
        android:id="@+id/wantedCharacter02"
        android:layout_toRightOf="@id/wantedCharacter01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
        android:layout_marginRight="19px"
      />
      <TextView
        android:id="@+id/wantedCharacter03"
        android:layout_toRightOf="@id/wantedCharacter02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
      />
      <TextView
        android:id="@+id/wantedCharacter04"
        android:layout_toRightOf="@id/wantedCharacter03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
        android:layout_marginRight="19px"
      />
      <TextView
        android:id="@+id/wantedCharacter05"
        android:layout_toRightOf="@id/wantedCharacter04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
      />
      <TextView
        android:id="@+id/wantedCharacter06"
        android:layout_toRightOf="@id/wantedCharacter05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
        android:layout_marginRight="19px"
      />
      <TextView
        android:id="@+id/wantedCharacter07"
        android:layout_toRightOf="@id/wantedCharacter06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
      />
      <TextView
        android:id="@+id/wantedCharacter08"
        android:layout_toRightOf="@id/wantedCharacter07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="27sp"
        android:textColor="#d0ffffff"
        android:typeface="monospace"
        android:textScaleX="1.3"
      />
    </RelativeLayout>
  </RelativeLayout>
</LinearLayout>

